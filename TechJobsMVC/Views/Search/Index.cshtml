<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
               // @if(ViewBag.checkedValue == column.Key)
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key"   @if(ViewBag.checkedValue == column.Key){<text>checked="checked"</text>} />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />
   
    @if(ViewBag.jobs != null)
    {
        @foreach (Job job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <td>ID </td>
                    <td>@job.Id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>@job.Name</td>
                </tr>
                <tr>
                    <td>Employer</td>
                    <td><a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.Employer">@job.Employer</a></td>
                </tr>
                <tr>
                    <td>Location</td>                  
                    <td><a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.Location">@job.Location</a></td>
                </tr>
                <tr>
                    <td>Position</td>
                    <td><a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.PositionType">@job.PositionType</a></td>
                </tr>
                <tr>
                    <td>Skill</td>
                    <td><a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@job.CoreCompetency">@job.CoreCompetency</a></td>
                </tr>
            </table>
        }
    }
    </div>